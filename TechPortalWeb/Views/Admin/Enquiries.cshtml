@model IEnumerable<TechPortalWeb.Models.EnquiryFormModel>
<div class="container">
    <section class="enquiry-section">
        <div class="enquiry-header">
            <h2><i class="fa-solid fa-circle-info"></i> Enquiry List</h2>
            <span id="loadingIcon" style="display:none;">
                <i class="fa fa-spinner fa-spin"></i> Loading...
            </span>
            <button id="refreshButton" class="btn btn-primary"><i class="fa-solid fa-rotate"></i> Refresh</button>
        </div>
        <hr />
        <table class="table table-bordered" id="enquiryTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Skillset</th>
                    <th>Comments</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enquiry in Model)
                {
                    <tr class="enquiry-row">
                        <td>@enquiry.Name</td>
                        <td>@enquiry.PhoneNumber</td>
                        <td>@enquiry.Email</td>
                        <td>@enquiry.Skillset</td>
                        <td>@enquiry.Comments</td>
                        <td class="actions">
                            <a href="/admin/candidate/@enquiry.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="pagination-controls">
            <select id="page-size" class="form-select">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <button id="prev-page" class="btn btn-secondary">Previous</button>
            <span id="current-page">1</span> / <span id="total-pages">1</span>
            <button id="next-page" class="btn btn-secondary">Next</button>
        </div>

    </section>
</div>
<script>
    $(function () {        
        let rowsPerPage = 5;
        let currentPage = 1;
        var totalRows = $('#enquiryTable tbody tr').length;
        var totalPages = Math.ceil(totalRows / rowsPerPage);
        $('#total-pages').text(totalPages);
        // Show the first page
        showPage(currentPage, rowsPerPage);
    });
</script>

