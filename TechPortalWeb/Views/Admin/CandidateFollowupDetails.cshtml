@model IEnumerable<TechPortalWeb.Models.FollowUpModel>
<div class="container">
    <section>
        <h2><i class="fa-solid fa-arrow-up"></i> Follow-up Details</h2>
        <div class="follow-up-form mb-4">
            <label for="followUpText" class="form-label">Add Follow-Up Details:</label>
            <textarea id="followUpText" class="form-control" rows="4" placeholder="Enter follow-up details..."></textarea>
            <div class="text-danger" id="errorMessage" style="display:none;"></div>
            <button id="saveFollowUpButton" class="btn btn-primary mt-2">Save Follow-Up</button>
        </div>
    </section>
    <section>
        <h3>Previous Follow-Ups</h3>
        <div class="follow-up-history">
            <ul class="list-group" id="followUpList">
                @if (Model != null && Model.Any())
                {
                    foreach (var followUp in Model)
                    {
                        <li class="list-group-item">
                            <div>
                                <strong>Last Updated By:</strong> @followUp.LastUpdatedBy
                            </div>
                            <div>
                                <strong>Content:</strong> @followUp.Content
                            </div>
                            <div class="text-muted">
                                <small><strong>Date:</strong> @followUp.LastUpdatedOn.ToString("g")</small>
                            </div>
                        </li>
                    }
                }
                else
                {
                    <p class="text-muted" id="txt-no-followups">No follow-ups have been added yet.</p>
                }
            </ul>
        </div>
    </section>
</div>