<div class="container">
    <section class="article-create">
        <div class="d-flex justify-content-end mt-3">
            <a href="/admin" class="btn btn-secondary">Back to Articles</a>
        </div>
        <h2><i class="fa-solid fa-edit"></i> Article Create</h2>
        <hr />
        <div class="row">
            <!-- First Column -->
            <div class="col-md-12 mb-3">
                <label class="form-label">Title</label>
                <input type="text" id="article-title" class="form-control" />
            </div>
            <div class="col-md-12 mb-3">
                <label class="form-label">Title URL</label>
                <input type="text" id="article-title-url" class="form-control" />
            </div>
            <div class="col-md-12 mb-3">
                <label class="form-label">Content</label>
                <textarea class="content form-control" id="content-editor" name="content"></textarea>
            </div>
            <div class="col-md-12 mb-3">
                <label class="form-label">Images</label>
                <input type="file" id="file-input" class="form-control" multiple accept="image/*" />
                <div class="preview mt-3" id="preview"></div>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <button id="btnCreateArticle" class="btn btn-primary">Create</button>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        $('#content-editor').richText();        
    });
</script>




